<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Edicion del Pedido"
        android:textSize="38sp"
        android:layout_marginBottom="150dp"/>


    <Button
        android:id="@+id/clientChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar cliente"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/dateChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar fecha"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/articlesChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar articulos"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/pedidoEditCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="@color/red"
        android:layout_marginBottom="10dp"
        />

</LinearLayout>